{% extends 'base.html.twig' %}

{% block title %}Suspendre un utilisateur
{% endblock %}

{% block body %}

	<div class="container-fluid" style="margin-top:30px">

		<div class="row row-cols-1">

			<div class="card mb-4">
				<div class="row">
					<div class="text-center">
						Suspendre un utilisateur
					</div>
				</div>

				{{ form_start(form) }}
				{{ form_row(form.name) }}
				{{ form_row(form.email) }}
				{{ form_row(form.isVerified) }}
				{{ form_row(form.IsSuspended) }}

				<button type="submit" class="btn btn-primary btn-sm">Valider</button>
				<a href="{{ path('admin_user_list') }}" class="btn btn-primary btn-sm">Annuler</a>
				{{ form_end(form) }}

