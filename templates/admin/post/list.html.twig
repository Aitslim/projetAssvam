{% extends 'admin/admin_base.html.twig' %}

{% block title %}Gestion des articles
{% endblock %}

{% block body %}
	<main>
		<div class="container-fluid px-4">
			<div class="card mb-4">
				<div class="card-header">
					<i class="fas fa-table me-1"></i>
					Liste des articles
				</div>

				<table class="table table-striped table-hover table-bordered">
					<thead>
						<tr>
							<th scope="col">N°</th>
							<th scope="col">Titre</th>
							<th scope="col">Catégorie</th>
							<th scope="col">Date</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th scope="col">N°</th>
							<th scope="col">Titre</th>
							<th scope="col">Catégorie</th>
							<th scope="col">Date</th>
						</tr>
					</tfoot>

					<tbody>

						{% for post in posts %}

							<tr>
								<td>{{ post.id }}</td>
								<td>{{ post.title }}</td>
								<td>{{ post.category.name }}</td>
								<td>{{ post.createdAt | date("d/m/Y") }}</td>
								<td>
									<a href="{{ path('admin_post_update', {id: post.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
								</td>
							</tr>

						{% endfor %}

					</tbody>
				</table>
				<a href="{{ path('admin_post_add') }}" class="btn btn-primary">Ajouter</a>
			</div>
		</div>
	</main>
{% endblock %}
