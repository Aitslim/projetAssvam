{% extends 'admin/admin_base.html.twig' %}
{# {% include "admin/shared/search_manage.html.twig" %} #}

{% block title %}Liste des articles
{% endblock %}

{% block body %}
	<main>
		<div class="container-fluid px-4">
			<div class="card mb-4">
				<div class="card-header">
					{% include "admin/shared/search_manage.html.twig" %}
				</div>
				<table class="table table-striped table-hover table-bordered table-sm">
					<thead>
						<tr>
							<th scope="col">N°</th>
							<th scope="col">Titre</th>
							<th scope="col">Image</th>
							<th scope="col">Catégorie</th>
							<th scope="col">Date</th>
						</tr>
					</thead>
					<tfoot>
						<tr>
							<th scope="col">N°</th>
							<th scope="col">Titre</th>
							<th scope="col">Image</th>
							<th scope="col">Catégorie</th>
							<th scope="col">Date</th>
						</tr>
					</tfoot>

					<tbody>

						{% for post in posts %}

							<tr>
								<td>{{ post.id }}</td>
								<td>
									<a href="{{ path('admin_post_view', {id: post.id}) }}">{{ post.title | slice(0, 20) }}</a>
								</td>
								<td>
									{% if not post.imagefilename is empty %}
										<img src="{{ asset('assets/images/uploads/posts/' ~ post.imagefilename) }}" alt="" style="width:30px; height:30px">
									{% endif %}
								</td>
								<td>{{ post.category.name }}</td>
								<td>{{ post.createdAt | date("d/m/Y") }}</td>
								<td>
									<a href="{{ path('admin_post_update', {id: post.id}) }}" class="btn btn-primary btn-sm">Modifier</a>
								</td>
							</tr>

						{% endfor %}

					</tbody>
				</table>
				{# <a href="{{ path('admin_post_add') }}" class="btn btn-primary">Ajouter</a> #}
			</div>
		</div>
	</main>
{% endblock %}
