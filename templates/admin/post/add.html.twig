{% extends 'base.html.twig' %}

{% block title %}
	Ajouter un article
{% endblock %}

{% block body %}

	<div class="container-fluid" style="margin-top:30px">

		<ol class="breadcrumb mb-4">
			<li class="breadcrumb-item active">Ajouter un article</li>
		</ol>
		<div class="row gx-4 gx-lg-5 justify-content-center">
			{% for msgflash in app.flashes('error') %}
				<div class="alert alert-danger" role="alert">{{ msgflash }}</div>
			{% endfor %}
			{% for msgflash in app.flashes('success') %}
				<div class="alert alert-success" role="alert">{{ msgflash }}</div>
			{% endfor %}
		</div>

		{{ form_start(form) }}

		{{ form_row(form.title) }}
		{{ form_row(form.content) }}
		<div class="row">
			<div class="col-4">
				{{ form_row(form.category) }}
			</div>
		</div>
		{{ form_row(form.active) }}
		{{ form_row(form.imagefilename) }}

		<button type="submit" class="btn btn-primary btn-sm">Ajouter</button>
		<a href="{{ path('admin_post_list') }}" class="btn btn-primary btn-sm">Annuler</a>

		{{ form_end(form) }}

	</div>

{% endblock %}
