{% extends 'base.html.twig' %}

{% block title %}Modifier un article
{% endblock %}

{% block body %}

	<main>
		<div class="container-fluid px-4">
			<ol class="breadcrumb mb-4">
				<li class="breadcrumb-item active">Modifier un article</li>
			</ol>
			<fieldset>
				{# <legend class="mt-4">Switches</legend> #}

				{{ form_start(form) }}
				{{ form_row(form.title) }}
				{{ form_row(form.content) }}

				<div class="row">
					<div class="col-10">
						<div class="row">
							<div class="col-4">
								{{ form_row(form.category) }}
							</div>
						</div>
						<div class="row">
							<div class="col-4">
								{{ form_row(form.active) }}
							</div>
						</div>
						<div class="row">
							<div class="col-4">
								{{ form_row(form.imagefilename) }}
							</div>
						</div>
					</div>
					<div class="col-2">
						{% if not currentimgpost is empty %}
							<img src="{{ asset('assets/images/uploads/posts/' ~ currentimgpost) }}" alt="" class="img-thumbnail" width="200" height="200">
						{% endif %}
					</div>
				</div>

				<button type="submit" class="btn btn-primary btn-sm">Valider</button>
				<a href="{{ path('admin_post_list') }}" class="btn btn-primary btn-sm">Annuler</a>

				{{ form_end(form) }}
			</fieldset>
		</div>
	</main>
{% endblock %}
