{% extends 'base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<div class="container-fluid" style="margin-top:30px">

		<div class="row">

			<div class="col-md-8 col-sm-8 col-lg-8">

				<h3>Actualités Index</h3>

				{% for post in lastposts %}

						<div class="card mb-4 border-info shadow">

							<div class="card-body">

								{% if not post.imagefilename is empty %}
									<img src="{{ asset('assets/images/uploads/posts/' ~ post.imagefilename) }}" alt="" class="float-start img-fluid" style="width:30%;height:30%;margin-right:15px;">
								{% endif %}
								<div class="d-flex justify-content-between">
									<h5 class="card-title">{{ post.title }}</h5>
									<div>
										<sup>{{ post.createdAt | date("d/m/Y") }}</sup>
									</div>
								</div>
								<p class="card-text">
									{{ post.content | u.truncate(800, ' ...', false) | raw }}
								</p>

							</div>

						</div>

				{% endfor %}

			</div>

			<!-- Barre latérale -->
			{{ include('shared/_sidebar.html.twig') }}

		</div>

	</div>
{% endblock %}
